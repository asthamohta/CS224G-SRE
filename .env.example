# GitHub Ingestion Configuration
# Copy this file to .env and fill in your values

# GitHub Personal Access Token (needs repo read permissions)
GITHUB_TOKEN=your_github_token_here

# GitHub Webhook Secret (for webhook signature verification)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Repository to watch
WATCH_REPO_OWNER=asthamohta
WATCH_REPO_NAME=CS224G-SRE

# Path prefix to filter changes (e.g., "services/cart" or leave empty for all)
WATCH_PATH_PREFIX=

# Service ID to use for ingested events (derived from path if not set)
SERVICE_ID=

# IMPORTANT: Path where GitHub PR/commit events will be saved as JSONL
# This file will be read by the graph/agent.py for context enrichment
GITHUB_OUTPUT_PATH=./github_events.jsonl

# Gemini API Key (for LLM-powered RCA analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# OTLP (OpenTelemetry) Integration
# Set to true to enable real-time graph construction from OTLP traces/metrics/logs
# When enabled, the ingestion service will build a live service dependency graph
# Access the graph state at: http://localhost:8000/graph/status
ENABLE_GRAPH_BUILDER=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
